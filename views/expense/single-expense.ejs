<div class="container">
    <h1 class="page-header">Expense</h1>

    <ul class="list-group">
        <li class="list-group-item">
            <h3><strong><%= expenseItem.date %>: </strong></h3>
            <h4>
                <%= expenseItem.transaction %>
            </h4>
            <h4>
                <% if ((!expenseItem.cost) && (!isNaN(parseFloat(expenseItem.cost)))) { %>
                    No price set
                    <% } else { %>
                        $
                        <%= expenseItem.cost %>
                            <% } %>
            </h4>
            <a class="btn btn-warning" href=<%="/expense/" + expenseItem.id + "/edit" %>>Edit</a>
            <form class="deleteForm " method="POST" action=<%="/expense/delete/" + expenseItem.id %>>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </li>
    </ul>

</div>