<div class="container">
    <h1 class="page-header">Edit</h1>
    <form action=<%="/expense/update/" + expenseItem.id %> method="POST">
        <%
    let now = new Date()
    let yyyy = now.getFullYear();
    let mm = now.getMonth()+1;
    let dd = now.getDate();
    let hr = now.getHours()
    let min = now.getMinutes()
    
    if (dd < 10){ dd='0'+dd } 
    if (mm < 10){ mm='0'+mm } 
    if (hr < 10){ hr='0'+hr }
    if (min < 10){ min='0'+min }
    
    let today = yyyy+'-'+mm+'-'+dd+'T'+hr+':'+min;
    %>
            <div class="form-group">
                <label for="datetime">Date of Transaction</label>
                <input type="datetime-local" id="notify-date" name="datetime" value="<%= expenseItem.date %>" min="<%= today %>">
            </div>
            <div class="form-group">
                <label for="description">Transaction Description</label>
                <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Enter the Transaction Description" name="transaction"><%= expenseItem.transaction %></textarea>
            </div>
            <div class="form-group">
                <label for="price">Cost of Expense</label>
                <input type="text" name="price" value="<%= expenseItem.cost %>">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>